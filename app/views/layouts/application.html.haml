		%title
			= content_for?(:title) ? yield(:title) : "TopVision" 

		= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true 
		= javascript_include_tag "basic_js/application", "data-turbolinks-track" => true 
